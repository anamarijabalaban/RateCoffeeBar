<div class="row">
	<div class="col-sm-6">
		<h1 id="bar-name-show">
			<%= @bar.name %>
		</h1> 
		<p id="bar-address-show">
			<%= @bar.address %>

		</p>
		</br>
		<p class="bar-info-show">
			<%= @bar.info %>
		</p>	
		</br>
		<% if current_user %>
			<div class="col-sm-6">
			  <p class="bar-info-show">Ambient:</p>
			  <%= rating_for_user @bar, current_user, "ambient",star: 5 %>
			  </br>
			  <p class="bar-info-show">Coffee:</p>
			  <%= rating_for_user @bar, current_user, "coffee", star: 5 %>
			  </br>
			</div>
			<div class="col-sm-6">
			  <p class="bar-info-show">Service:</p>
			  <%= rating_for_user @bar, current_user, "service", star: 5 %>
			  </br>
			  <p class="bar-info-show">Visuality:</p>
			  <%= rating_for_user @bar, current_user, "visuality", star: 5 %> 
			  </br>
			</div>
		<% else %>
			<div class="row">
				<div class="averages bar-info-show col-sm-2">
					Ambient:
					<%= rating_for @bar, "ambient", imdb_avg: true, disable_after_rate: true %>
				</div>
				<div class="averages bar-info-show col-sm-2">
					Coffee:
					<%= rating_for @bar, "coffee", imdb_avg: true, disable_after_rate: true %>
				</div>
				<div class="averages bar-info-show col-sm-2">
					Service:
					<%= rating_for @bar, "service", imdb_avg: true, disable_after_rate: true %>
				</div>
				<div class="averages bar-info-show col-sm-2">	
					Visuality:
					<%= rating_for @bar, "visuality", imdb_avg: true, disable_after_rate: true %>
				</div>
			</div>
		<% end %>
	</div>

	<div class="col-sm-6">
		<h2>Comments</h2>
		<div class="comment-list">
			<%= render @bar.comments %>
		</div>
		<%= render 'comments/form' %>
	</div>
</div>
<%= link_to 'Back', coffee_bars_path %>